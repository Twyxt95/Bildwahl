            <RowDefinition Height="2*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Grid.Column="0"
      Content="Titel:" 
      HorizontalAlignment="Right"
      Target="{Binding ElementName=imageLinkTxt}"
      />
