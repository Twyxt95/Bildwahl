<UserControl 
  x:Class="Bildwahl.View.NewScenarioView"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:vw="clr-namespace:Bildwahl.View"
 

  >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Grid.Column="0"
      Content="Link:" 
      HorizontalAlignment="Right"
      Target="{Binding ElementName=imageLinkTxt}"
      />
        <TextBox Grid.Row="0" Grid.Column="1"
      x:Name="imageLinkTxt"
      Text="{Binding Path=ImageLink}" 
      Validation.ErrorTemplate="{x:Null}"
      />
     
        
        <Label Grid.Row="1" Grid.Column="0"
      Content="Titel:" 
      HorizontalAlignment="Right"
      Target="{Binding ElementName=titelTxt}"
      />
        <Button Grid.Row="1" Grid.Column="1"
      x:Name="titelTxt"
      Command="{Binding Path=SaveImageCommand}"
      Content="_Save"
      HorizontalAlignment="Right"
      Margin="4,2" 
      MinWidth="60" 
      />
 
        <Button Grid.Row="2" Grid.Column="2"
      Command="{Binding Path=SaveCommand}"
      Content="_Save"
      HorizontalAlignment="Right"
      Margin="4,2" 
      MinWidth="60" 
      />
    </Grid>
</UserControl>
