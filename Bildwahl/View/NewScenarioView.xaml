            </Grid.RowDefinitions>
            <Button Grid.Row="0" Grid.Column="2" Command="{Binding Path=SaveImageCommandBlueBlue}" Content="+" Style="{StaticResource AddImageButtonStyle}"/>
            <Button Grid.Row="0" Grid.Column="0" Command="{Binding Path=DeleteImageCommandBlueBlue}" Content="-" Style="{StaticResource DeleteImageButtonStyle}"/>
