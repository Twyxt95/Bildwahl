        <Style x:Key="TobiiButtonStyle" TargetType="{x:Type Button}">
            <Style.Triggers>
                <Trigger Property="tobii:Behaviors.HasGaze" Value="True">
                    <Setter Property="Content" Value="{Binding NotifyOnTargetUpdated=True}" />
